@{Layout=null;}
<ul id ="desktop-list" class="side-list">
    <li id="desktop1" class="side-list-item desktop-list-item ui-state-default">Desktop1</li>
    <li id="desktop2" class="side-list-item desktop-list-item ui-state-default">Desktop2</li>
    <li id="desktop3" class="side-list-item desktop-list-item ui-state-default">Desktop3</li>
</ul>

<script type="text/javascript">
    $('#desktop1').click(function () {
        //TODO:
        refreshDesktop(1);
    });
    $('#desktop2').click(function () {
        //TODO:
        refreshDesktop(2);
    });
    $('#desktop3').click(function () {
        //TODO:
        refreshDesktop(3);
    });

    function refreshDesktop(id) {
        $.post("DesktopList/Refresh?desktopID="+id, function (data) {
            $('#desktop-container').html(data);
        });
    };
</script>